<div class="container text-center">
  <h2> <%= @post.title %> </h2>
  <p>  <%=  @post.body %> </p>
  <%= link_to "Edit", edit_post_path(@post),:class => "btn btn-outline-success" %>
  <%= link_to "Delete", post_path(@post),
                    method: :delete,
                    data: {confirm: 'Really?'},
                    :class => "btn btn-outline-danger" %>
</div>

<hr>

