<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="card card-body bg-light p-3">
    <p><strong><%= comment.username %></strong>
        : <%= comment.body %>
        <%= link_to "[x]", [comment.post, comment],
                          method: :delete,
                          data: {confirm: 'Really?'},
                          :class => "radio-inline" %>
    </p>
  </div>
<% end %>
